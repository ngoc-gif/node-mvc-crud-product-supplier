<%- include('../partials/header') %>
<h2>Edit Product</h2>
<form action="/products/<%= product._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" class="form-control" value="<%= product.name %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Price</label>
    <input name="price" type="number" step="0.01" class="form-control" value="<%= product.price %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Quantity</label>
    <input name="quantity" type="number" class="form-control" value="<%= product.quantity %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Supplier</label>
    <select name="supplier" class="form-select" required>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplier.equals(s._id) ? 'selected' : '' %>><%= s.name %></option>
      <% }) %>
    </select>
  </div>
  <button class="btn btn-primary">Save</button>
  <a href="/products" class="btn btn-secondary">Cancel</a>
</form>
<%- include('../partials/footer') %>
