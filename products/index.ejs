<%- include('../partials/header') %>
<div class="d-flex justify-content-between align-items-center">
  <h2>Products</h2>
  <a href="/products/new" class="btn btn-primary">New Product</a>
</div>
<table class="table mt-3">
  <thead><tr><th>Name</th><th>Price</th><th>Qty</th><th>Supplier</th><th>Actions</th></tr></thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.supplier ? p.supplier.name : 'â€”' %></td>
        <td>
          <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
          <form action="/products/<%= p._id %>?_method=DELETE" method="POST" style="display:inline">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
